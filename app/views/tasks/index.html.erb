<h1>All Tasks</h1>

<% @tasks.each do |task| %>
  <div class="task-list">
  <p><%= task.title %></p>
  <p><%= task.details %></p>
  <p><%= task.completed %></p>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

<h3><%= link_to 'Create new Task', new_task_path %></h3>