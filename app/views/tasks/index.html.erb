<h1 class="page-title">Your current tasks</h1>
<div class="wrapper">
	<div class="container">
		<h2>All Tasks</h2>
		<% @tasks.each do |task| %>
		<div class="task-list">
		  <p><%= task.title %></p>
		  <p><%= task.details %></p>
		  <p><%= task.completed %></p>
		  <%= link_to "Delete", task_path(task),
		      method: :delete,
		      data: { confirm: "Are you sure?" } %>
		  <% end %>
		</div>
	</div>
</div>

<h3><%= link_to 'Create new Task', new_task_path %></h3>