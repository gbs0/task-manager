<div class="container">
  <h1 class="page-title">Details</h1>
    <div class="alert alert-success" role="alert">
      <h4 class="alert-heading">Title:"<%= @task.title %>"</h4>
      <p><%= @task.details %></p>
      <hr>
      <% if task.completed == true %>
            <i class="far fa-check-circle"></i>
          <% else %>
             <i class="far fa-circle"></i>
          <% end %>
      <p class="mb-0"><%= @task.completed %></p>
    </div>
</div>

<div class="buttons">
  <a class="link">
    <%= link_to "Edit this task", edit_task_path %>
  </a>

  <div class="link">
    <%= link_to "Back to list", tasks_path %>
  </div>
</div>
