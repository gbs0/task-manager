<div class="container">
	<h1 class="page-title">Show one task</h1>
	<h2><%= @task.title %></h2>
	<h4><%= @task.details %></h4>
	<p><%= @task.completed %></p>
</div>

<div class="buttons">
  <div class="link">
    <%= link_to "Edit this task", edit_task_path %>
  </div>

  <div class="link">
    <%= link_to "Back to list", tasks_path %>
  </div>
</div>
